<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.accountbookuisampling">

    <application
        android:name=".application.BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AccountBookUISampling"
        tools:targetApi="31">
        <activity android:name=".main.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.activity.MainActivity"
            android:exported="false">
            </activity>
        <activity
            android:name=".register.activity.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".registerinput.activity.AddAssetInputActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".registerinput.activity.AddCategoryInputActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".registerinput.activity.SelectRepeatActivity"
            android:exported="false" />
        <activity
            android:name=".registerinput.activity.SelectInstallmentActivity"
            android:exported="false" />

        <activity android:name=".registerinput.activity.AddAssetGroupActivity"
            android:exported="false"
            android:theme="@style/Theme.Translucent"
            />
    </application>

</manifest>